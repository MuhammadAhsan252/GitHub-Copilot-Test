<h1>New Post</h1>

<%= form_with model: @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.rich_text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>
