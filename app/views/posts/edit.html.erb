<h1>Edit Post</h1>

<%= form_with model: @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.input :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.rich_text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Update Post', class: 'btn btn-primary' %>
  </div>
<% end %>
